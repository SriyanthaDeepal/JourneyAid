        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/glHr7"
        app:layout_constraintStart_toStartOf="@id/glVr3"
        app:layout_constraintTop_toTopOf="@id/glHr6" />

