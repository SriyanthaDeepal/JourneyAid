        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/glHr11"
        app:layout_constraintStart_toStartOf="@id/glVr3"
        app:layout_constraintTop_toTopOf="@id/glHr10"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account:"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/glHr19"
        app:layout_constraintEnd_toEndOf="@id/glVrCenter"
        app:layout_constraintStart_toStartOf="@id/glVr5"
        app:layout_constraintTop_toTopOf="@id/glHr18"
        tools:ignore="MissingConstraints" />

