        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/signupBackground"
        app:layout_constraintBottom_toBottomOf="@id/glHr20"
        app:layout_constraintEnd_toEndOf="@id/glVr14"
        app:layout_constraintStart_toStartOf="@id/glVr1"
        app:layout_constraintTop_toTopOf="@id/glHr1"
        app:srcCompat="@drawable/white_round_edge_rectangle"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="@id/glHr5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/glVr8"
        app:layout_constraintStart_toStartOf="@id/glVr7"
        app:layout_constraintTop_toTopOf="@id/glHr4"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/profile_photo_logo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="167dp" />

