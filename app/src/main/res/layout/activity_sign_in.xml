        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/glHr15"
        app:layout_constraintEnd_toEndOf="@id/glVr13"
        app:layout_constraintStart_toStartOf="@id/glVr2"
        app:layout_constraintTop_toTopOf="@id/glHr14"
        tools:ignore="MissingConstraints,DuplicateSpeakableTextCheck,TextContrastCheck,TouchTargetSizeCheck" />

