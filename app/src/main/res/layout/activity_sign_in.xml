        android:id="@+id/etSignInUserName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/dataentringtab"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="John123"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/glHr9"
        app:layout_constraintEnd_toEndOf="@id/glVr13"
        app:layout_constraintStart_toStartOf="@id/glVr2"
        app:layout_constraintTop_toTopOf="@id/glHr8"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/etSignInPassword"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/dataentringtab"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="xxxxxx"
        android:inputType="textPassword"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/glHr13"
        app:layout_constraintEnd_toEndOf="@id/glVr13"
        app:layout_constraintStart_toStartOf="@id/glVr2"
        app:layout_constraintTop_toTopOf="@id/glHr12"
